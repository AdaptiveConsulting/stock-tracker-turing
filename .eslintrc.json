{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended", "react-app"],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "jsx": true,
      "ts": true,
      "modules": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "react/prop-types": "off"
  }
}
